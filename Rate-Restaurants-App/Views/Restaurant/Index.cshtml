@model IEnumerable<Rate_Restaurants_App.Models.Restaurant>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm())
{
    <table>
        <thead>
        <tr>
            <td> Select by tag: </td>
            <td>@Html.DropDownList("TagId", null, "Any Tag", htmlAttributes:  new { @class= "form-control"})</td>
            <td><input type="submit" value="Filter" class="btn btn-default"/>@Html.ActionLink("Clear", "Index")</td>
        </tr>
        </thead>
    </table>
}
<table class="table">
    
    
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tags)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @foreach (var tag in item.Tags)
                {
                    @: @tag.Name <br/>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RestaurantId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RestaurantId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RestaurantId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
